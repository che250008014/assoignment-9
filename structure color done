#include <iostream>

// 1. Define the Color structure
struct Color {
    int red;
    int green;
    int blue;
};

int main() {
    // 2. Declare and initialize an array of 5 Color structures
    Color colors[5] = {
        {255, 0, 0},     // Red
        {0, 255, 0},     // Green
        {0, 0, 255},     // Blue
        {128, 128, 128}, // Gray
        {255, 255, 255}  // White
    };

    // Display original RGB values
    std::cout << "Original Colors:" << std::endl;
    for (int i = 0; i < 5; ++i) {
        std::cout << "Color " << i + 1 << ": ("
                  << colors[i].red << ", "
                  << colors[i].green << ", "
                  << colors[i].blue << ")" << std::endl;
    }

    // 3. Invert the color values for the first 3 elements
    for (int i = 0; i < 3; ++i) {
        colors[i].red = 255 - colors[i].red;
        colors[i].green = 255 - colors[i].green;
        colors[i].blue = 255 - colors[i].blue;
    }

    // Display the new RGB values for all 5 elements
    std::cout << "\nAfter Inverting the first 3 Colors:" << std::endl;
    for (int i = 0; i < 5; ++i) {
        std::cout << "Color " << i + 1 << ": ("
                  << colors[i].red << ", "
                  << colors[i].green << ", "
                  << colors[i].blue << ")" << std::endl;
    }

    return 0;
}
